<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WIA1002.EditAccountController">
    <children>
        <VBox spacing="10.0" layoutX="100.0" layoutY="50.0">
            <HBox spacing="10.0">
                <Label text="Email:" />
                <TextField fx:id="emailTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Name:" />
                <TextField fx:id="nameTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Username:" />
                <TextField fx:id="usernameTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Contact Number:" />
                <TextField fx:id="contactNumberTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Birthday (dd-MM-yyyy):" />
                <TextField fx:id="birthdayTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Gender:" />
                <TextField fx:id="genderTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Job:" />
                <TextField fx:id="jobTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Hobbies (comma-separated):" />
                <TextField fx:id="hobbiesTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Address:" />
                <TextField fx:id="addressTextField" />
            </HBox>

            <HBox spacing="10.0">
                <Button text="Save" onAction="#saveButtonOnAction" fx:id="saveButton" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
