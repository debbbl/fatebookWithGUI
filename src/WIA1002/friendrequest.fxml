<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="376.0" prefWidth="460.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WIA1002.tempFriendRequestController">
    <Label text="Friend Requests" />

    <HBox alignment="CENTER" spacing="10">
        <ListView fx:id="friendRequestListView" prefWidth="250" />
        <VBox alignment="CENTER" spacing="10">
            <ImageView fx:id="profileImageView" fitHeight="200" fitWidth="200" />
            <Label fx:id="usernameLabel" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="acceptButton" onAction="#acceptButtonOnAction" text="Accept" />
        <Button fx:id="rejectButton" onAction="#rejectButtonOnAction" text="Reject" />
        <!--<Button fx:id="cancelButton" onAction="#cancelButtonOnAction" text="Cancel" />-->
    </HBox>
</VBox>
