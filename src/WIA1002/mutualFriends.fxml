<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="WIA1002.mutualFriendsController"
      prefWidth="400" prefHeight="300" alignment="CENTER" spacing="10">

    <Label text="Find Mutual Friends" style="-fx-font-size: 20px;"/>

    <HBox alignment="CENTER" spacing="10">
        <Label text="User:"/>
        <TextField fx:id="userTextField"/>
    </HBox>

    <Button text="Find Mutual Friends" onAction="#findMutualFriendsOnAction"/>

    <ListView fx:id="mutualFriendsListView" prefWidth="200" prefHeight="150" />

    <Label fx:id="resultLabel"/>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

</VBox>
